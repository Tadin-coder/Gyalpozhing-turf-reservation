          <form action="/search" method="post">
            <div class="form-group">
              <label></label>
              <div style="float: left;">
              <input type="date" class="form-control" name="getdate" style="max-width:min-content"/></div>
              <div style="float:left;margin-left: 4px" >
              <button type="submit" class="btn success"> <i class="fa fa-search" style="font-size: 24px;color:rgb(92, 87, 81); "></i></button></div>
            </div> </form>

          <div class="form-container">
        
            <h4 style="font-family: roboto">Booking List</h4>
            
            <table class="table table-striped table-bordered table-hover">
              <thead>
                <tr>
                  <th scope="col">Date Booked</th>
                  <th scope="col">Time</th>
                  <th scope="col">Status</th>
                </tr>
              </thead>
              <tbody>
                <% foundRecord.forEach(book => { %>
                <tr>
                  <% if (book.isConfirm === "Pending"){ %>
                  <td><%= book.date %></td>
                  <td><%= book.time %>(<%= book.day %>)</td> 
                  <td>
                    <span style="background-color: #fee6af;
                    padding: 4px 25px 4px 25px;
                    border-radius: 4px;
                    text-align: center;"> Pending</span>
                  </td>
                  <% }else if(book.isConfirm === "Confirmed"){ %>
                    <td><%= book.date %></td>
                    <td><%= book.time %>(<%= book.day %>)</td>
                    <td  >
                    <span style="background-color: #ECA0A8;
                    padding: 4px 25px 4px 25px;
                    border-radius: 4px;
                    text-align: center;"> Confirmed</span>
                  </td>
                  <% } %>
                  <% }) %>
                </tr>
              </tbody>
            </table>
          </div>
     
          <br><br>
         
</div>
<a href="/bookingForm">
<button
          class="btn btn-block"
          type="button"
          style="
            background-color: #4caf50;
            font-family: Roboto, sans-serif;
            padding:10px;
            color: #fff;

          "
        >
          Make Reservation
        </button>
      </a>
</div>
