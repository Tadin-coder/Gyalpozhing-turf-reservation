  <!-- ======= Hero Section ======= -->
 


  <main id="main">
    <!-- ======= Whu Us Section ======= -->
    <section id="why-us" class="why-us">
      <div class="container">

        <div class="section-title">
          <h2>Schedule Records </h2>
          <br><br>


        <div class="row" style="padding-left:80px;">
          

          <div class="col-md-1">
          <div class="bg-danger text-center p-1"></div> 
          <p>Booked</p></div>

          <div class="col-md-1">
            <div class="bg-warning text-center p-1"></div> 
            <p>Pending</p>
            
          </div>

          <p>Note: No reservations should be made for any of these times.</p>
      
        </div>

        <br><br>
