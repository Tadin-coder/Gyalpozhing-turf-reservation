<div class="register-photo" style="background-color: #ffffff; margin-top: px">
  <div class="form-container" id="loginform">
    <div
      class="image-holder"
      style="
        background-image: url('asset/img/log1.png');
        background-position: center;
      "
    ></div>
    <form
      action="/login"
      method="post"
      style="border: 1px solid; border-radius: 15px"
      ;
    >
      <% if (typeof errorMessage !== "undefined") { %>
      <p role="alert"><%= errorMessage %></p>
      <% } %> <% if (typeof successMessage !== "undefined") { %>
      <p role="alert"><%= successMessage %></p>
      <% } %>
      <h2 class="text-center" style="font-family: Roboto, sans-serif">
        <strong>Welcome back</strong>
      </h2>
      <div class="form-group">
        <label>Email</label>
        <input type="email" class="form-control" name="username" required />
        <p style="color: red">
          <%= (typeof errors!="undefined" && typeof
          errors.username!="undefined") ? errors.username.msg: ""%>
        </p>
      </div>

      <div class="form-group">
        <label>Password</label>
        <input type="password" class="form-control" name="password" required />
        <br />
        <span style="color: red; font: size 14px" id="Err"> </span>
        <p style="color: red">
          <%= (typeof errors!="undefined" && typeof
          errors.password!="undefined") ? errors.password.msg: ""%>
        </p>
      </div>
      <a
        style="
          float: right;
          margin-bottom: 10px;
          margin-top: -20px;
          color: #4caf50;
          text-decoration: none;
        "
        href="/forgotpassword"
        >Forgot Password?</a
      >
      <div class="form-group">
        <button
          class="btn btn-block"
          type="submit"
          style="
            background-color: #4caf50;
            font-family: Roboto, sans-serif;
            color: #fff;
          "
        >
          Log In
        </button>
      </div>
      <hr />
      <a
        class="already"
        href="/userRegister"
        style="font-family: Roboto, sans-serif"
        >Don&#39;t have an account?
        <span style="color: #4caf50">Sign Up.</span></a
      >
    </form>
  </div>
</div>

