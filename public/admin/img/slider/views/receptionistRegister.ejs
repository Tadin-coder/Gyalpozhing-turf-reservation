<link href="css/staffRegister.css" rel="stylesheet">

<section class="h-100 h-custom" style="background-color: #8fc4b7;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-8 col-xl-6">
        <div class="card rounded-3">
          <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/img3.webp"
            class="w-100" style="border-top-left-radius: .3rem; border-top-right-radius: .3rem;"
            alt="Sample photo">
          <div class="card-body p-4 p-md-5">
            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 px-md-2">Receptionist Registration</h3>

            <form class="px-md-2" method="post" action="/receptionistRegister">

              <div class="form-outline mb-4">
                <input type="text" id="form3Example1q" class="form-control" name="recepname" required autofocus>
                <label class="form-label" for="form3Example1q">Name</label>
              </div>
              <div class="form-outline mb-4">
                <input type="text" id="form3Example1q" class="form-control" name="recepusername" required>
                <label class="form-label" for="form3Example1q">Username</label>
              </div>
              <div class="form-outline mb-4">
                <input type="password" id="form3Example1q" class="form-control" name="receppassword" required>
                <label class="form-label" for="form3Example1q">Password</label>
              </div>

              <div class="row">
                <div class="col-md-6 mb-4">

                  <div class="form-outline datepicker">
                    <input type="text" class="form-control" id="exampleDatepicker1" name="recepcontact" required>
                    <label for="exampleDatepicker1" class="form-label">Contact Number</label>
                  </div>

                </div>
                <div class="col-md-6 mb-4">

                  <select class="select" name="recepgender" required >
                    <option value="1" disabled>Gender</option>
                    <option value="Female">Female</option>
                    <option value="Male">Male</option>
                    <option value="Other">Other</option>
                  </select>

                </div>
              </div>

              <!-- <div class="mb-4">

                <select class="select" name="staffdepartment" required>
                  <option value="1" disabled>Profession</option>
                  <option value="surgery">Surgery</option>
                  <option value="eye">Eye</option>
                  <option value="general">General</option>
                </select>

              </div> -->

              <div class="row mb-4 pb-2 pb-md-0 mb-md-5">
                <div class="col-md-6">

                  <div class="form-outline">
                    <input type="text" id="form3Example1w" class="form-control" name="recepemployid" required/>
                    <label class="form-label" for="form3Example1w">Employ ID</label>
                  </div>

                </div>
              </div>

              <button type="submit" class="btn btn-success btn-lg mb-1">Submit</button>

            </form>

          </div>
        </div>
      </div>
    </div>
